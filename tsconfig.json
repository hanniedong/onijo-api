{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "es2015"
    ],
    "paths": {
      "@utils/*": [
        "src/utils/*"
      ],
      "@users/*": [
        "src/users/*"
      ],
      "@mappers/*": [
        "src/mappers/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}